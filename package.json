{
  "name": "yazmedia-dashboard-backend",
  "version": "1.0.0",
  "description": "YAZ Media Dashboard - HR & Company Management System Backend",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "dotenv -e .env.local -- nodemon --exec ts-node src/index.ts",
    "dev:prod": "dotenv -e .env.production -- nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "dotenv -e .env.production -- node dist/index.js",
    "start:local": "dotenv -e .env.local -- node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "prisma:studio:prod": "dotenv -e .env.production -- prisma studio",
    "prisma:seed": "dotenv -e .env.local -- ts-node prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "HR",
    "management",
    "payroll",
    "leave",
    "employees"
  ],
  "author": "YAZ Media",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.918.0",
    "@aws-sdk/s3-request-presigner": "^3.918.0",
    "@prisma/client": "^6.17.1",
    "@sendgrid/mail": "^8.1.6",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "google-auth-library": "^10.4.2",
    "googleapis": "^166.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "prisma": "^6.17.1",
    "resend": "^6.5.2",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.2",
    "@types/nodemailer": "^7.0.4",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
